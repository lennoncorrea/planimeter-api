{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*", "src/index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
